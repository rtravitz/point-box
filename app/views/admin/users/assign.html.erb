<%= render partial: "navbar/navbar" %>
<div class="container well" style="width: 50%">
  <h2>Assign Points</h2>
  <%= form_tag("/admin/assign-points", method: "put") do %>
    <div class="form-group">
      <%= label_tag :user %>
      <%= select_tag :user, options_from_collection_for_select(User.all, :id, :email), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :points %>
      <%= number_field_tag :points, class: "form-control" %>
    </div>
    <%= submit_tag("Assign", class: "btn btn-default") %>
  <% end %>
</div>
